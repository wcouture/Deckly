{
  "expo": {
    "name": "Deckly",
    "slug": "Deckly",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/deckly-icon.png",
    "scheme": "deckly",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/deckly-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/BagelFatOne-Regular.ttf"]
        }
      ],

      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/deckly-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
